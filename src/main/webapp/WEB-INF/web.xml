<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
	<display-name>Archetype Created Web Application</display-name>

	<servlet>
		<servlet-name>login</servlet-name>
		<servlet-class>by.itacademy.servlet.controller.AuthenticationController</servlet-class>
		<init-param>
			<param-name>actionType</param-name>
			<param-value>login</param-value>
		</init-param>
	</servlet>

	<servlet>
		<servlet-name>registration</servlet-name>
		<servlet-class>by.itacademy.servlet.controller.AuthenticationController</servlet-class>
		<init-param>
			<param-name>actionType</param-name>
			<param-value>register</param-value>
		</init-param>
	</servlet>

	<servlet>
		<servlet-name>main</servlet-name>
		<servlet-class>by.itacademy.servlet.controller.MainController</servlet-class>
		<init-param>
			<param-name>actionType</param-name>
			<param-value>main</param-value>
		</init-param>
	</servlet>

	<servlet>
		<servlet-name>profile</servlet-name>
		<servlet-class>by.itacademy.servlet.controller.MainController</servlet-class>
		<init-param>
			<param-name>actionType</param-name>
			<param-value>profile</param-value>
		</init-param>
	</servlet>

	<servlet>
		<servlet-name>logout</servlet-name>
		<servlet-class>by.itacademy.servlet.controller.MainController</servlet-class>
		<init-param>
			<param-name>actionType</param-name>
			<param-value>logout</param-value>
		</init-param>
	</servlet>

	<servlet-mapping>
		<servlet-name>login</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>registration</servlet-name>
		<url-pattern>/register</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>main</servlet-name>
		<url-pattern>/main</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>profile</servlet-name>
		<url-pattern>/profile</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>logout</servlet-name>
		<url-pattern>/logout</url-pattern>
	</servlet-mapping>

	<welcome-file-list>
		<welcome-file>main</welcome-file>
	</welcome-file-list>

</web-app>
